{
  "version": 2,
  "name": "badgr",
  "buildCommand": "npm run build:frontend",
  "outputDirectory": "src/frontend/dist",
  "installCommand": "npm install",
  "framework": "vite",
  "functions": {
    "api/**.js": {
      "runtime": "nodejs18.x"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
} 